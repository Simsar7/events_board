<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Events</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>body { font-family: 'Inter', sans-serif; }</style>
</head>

<body class="min-h-screen bg-gray-50">

<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="font-semibold text-xl text-gray-900">Events</a>

    <% if (user) { %>
      <a href="/logout" class="text-sm text-red-600 hover:text-red-700">Logout</a>
    <% } else { %>
      <a href="/login" class="text-sm text-gray-600 hover:text-blue-600">Admin Login</a>
    <% } %>
  </div>
</header>

<main class="max-w-7xl mx-auto px-4 py-8">

  <h1 class="text-3xl font-bold text-gray-900 mb-8">Events</h1>

  <div class="flex flex-col lg:flex-row gap-8">

    <!-- EVENTS GRID -->
    <div class="flex-1">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">

        <% events.forEach(event => { %>
        <div class="bg-white rounded-xl overflow-hidden shadow-md border border-gray-100">

          <div class="relative aspect-video">
            <img src="<%= event.image_url || '/placeholder.svg' %>" class="w-full h-full object-cover">

            <div class="absolute top-3 left-3 bg-white/95 rounded-lg px-3 py-1.5">
              <p class="text-xs font-semibold text-blue-600"><%= event.dates %></p>
            </div>

            <% if (event.featured) { %>
            <div class="absolute top-3 right-3 bg-yellow-400 text-xs font-semibold px-2 py-1 rounded-full">
              â­ Featured
            </div>
            <% } %>
          </div>

          <div class="p-4">
            <h3 class="font-semibold text-lg mb-2"><%= event.title %></h3>
            <p class="text-sm text-gray-500 mb-4">ğŸ“ <%= event.location %></p>

            <a href="/events/<%= event.id %>"
               class="block bg-blue-600 text-white text-sm rounded-lg text-center py-2">
              View Details
            </a>

            <% if (role === "admin") { %>
              <div class="mt-3 flex items-center gap-4 text-sm">
                <a href="/admin/events/<%= event.id %>/edit"
                   class="text-blue-600 hover:underline">
                  Edit
                </a>

                <form method="POST"
                      action="/admin/events/<%= event.id %>/delete"
                      onsubmit="return confirm('Delete this event?')">
                  <button type="submit" class="text-red-600 hover:underline">
                    Delete
                  </button>
                </form>
              </div>
            <% } %>

          </div>
        </div>
        <% }) %>

      </div>
    </div>

    <!-- HIGHLIGHTS -->
    <aside class="w-full lg:w-80">
      <div class="bg-white p-5 rounded-xl shadow border">
        <h2 class="font-semibold text-lg mb-4">Today's Highlight</h2>

        <% if (featured.length === 0) { %>
          <p class="text-sm text-gray-500">No featured events</p>
        <% } %>

        <% featured.forEach(event => { %>
          <a href="/events/<%= event.id %>" class="block mb-3">
            <p class="font-medium text-sm"><%= event.title %></p>
            <p class="text-xs text-gray-500"><%= event.dates %></p>
          </a>
        <% }) %>
      </div>
    </aside>

  </div>
</main>

<!-- FLOATING ADD BUTTON -->
<% if (role === "admin") { %>
  <a href="/admin/events/new"
     class="fixed bottom-6 right-6 w-14 h-14 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl shadow-lg">
    +
  </a>
<% } %>

</body>
</html>