<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Events</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'sans-serif'] },
          colors: {
            background: 'hsl(0, 0%, 99%)',
            foreground: 'hsl(220, 20%, 10%)',
            card: 'hsl(0, 0%, 100%)',
            'card-foreground': 'hsl(220, 20%, 10%)',
            primary: { DEFAULT: 'hsl(217, 91%, 50%)', foreground: 'hsl(0, 0%, 100%)' },
            secondary: { DEFAULT: 'hsl(220, 14%, 96%)', foreground: 'hsl(220, 20%, 20%)' },
            muted: { DEFAULT: 'hsl(220, 14%, 96%)', foreground: 'hsl(220, 10%, 45%)' },
            accent: { DEFAULT: 'hsl(217, 91%, 95%)', foreground: 'hsl(217, 91%, 40%)' },
            destructive: { DEFAULT: 'hsl(0, 84%, 60%)', foreground: 'hsl(0, 0%, 100%)' },
            border: 'hsl(220, 13%, 91%)',
            highlight: { DEFAULT: 'hsl(45, 93%, 58%)', foreground: 'hsl(45, 93%, 20%)' },
          },
          borderRadius: { lg: '0.75rem' },
          boxShadow: {
            'card': '0 4px 6px -1px hsl(220 20% 10% / 0.08), 0 2px 4px -2px hsl(220 20% 10% / 0.05)',
            'card-hover': '0 10px 15px -3px hsl(220 20% 10% / 0.08), 0 4px 6px -4px hsl(220 20% 10% / 0.05)',
            'elevated': '0 20px 25px -5px hsl(220 20% 10% / 0.1), 0 8px 10px -6px hsl(220 20% 10% / 0.05)',
          }
        }
      }
    }
  </script>
  <style>
    * { font-family: 'Inter', sans-serif; }
    .animate-fade-in { animation: fadeIn 0.3s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    .line-clamp-1 { overflow: hidden; display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical; }
  </style>
</head>

<body class="min-h-screen bg-background">

<!-- Header -->
<header class="sticky top-0 z-40 w-full border-b border-border bg-card/80 backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex h-16 items-center justify-between">
    <a href="/" class="flex items-center gap-2 group">
      <div class="w-9 h-9 bg-primary rounded-lg flex items-center justify-center transition-transform group-hover:scale-105">
        <svg class="w-5 h-5 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
      <span class="font-semibold text-xl text-foreground">Events</span>
    </a>

    <nav class="flex items-center gap-4">
      <% if (typeof user !== 'undefined' && user) { %>
        <a href="/logout" class="inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-muted-foreground hover:text-foreground hover:bg-accent rounded-md transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          Logout
        </a>
      <% } else { %>
        <a href="/login" class="inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-muted-foreground hover:text-foreground hover:bg-accent rounded-md transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
          </svg>
          Admin
        </a>
      <% } %>
    </nav>
  </div>
</header>

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-3xl font-bold text-foreground mb-8">Events</h1>

  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Events Grid -->
    <div class="flex-1">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <% events.forEach(event => { %>
        <div class="group relative bg-card rounded-lg overflow-hidden shadow-card transition-all duration-300 hover:shadow-card-hover hover:-translate-y-1 animate-fade-in">
          <!-- Image -->
          <div class="relative aspect-[4/3] overflow-hidden">
            <img src="<%= event.image_url || '/placeholder.svg' %>" alt="<%= event.title %>" 
                 class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105">
            
            <!-- Date Badge -->
            <div class="absolute top-3 left-3 bg-card/95 backdrop-blur-sm px-3 py-1.5 rounded-md shadow-sm">
              <div class="flex items-center gap-1.5 text-sm font-medium text-foreground">
                <svg class="w-3.5 h-3.5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span><%= event.dates %> @ <%= event.time || '19:30' %></span>
              </div>
            </div>

            <% if (event.featured) { %>
            <!-- Featured Badge -->
            <div class="absolute top-3 right-12 bg-highlight text-highlight-foreground text-xs font-semibold px-2.5 py-1 rounded-full flex items-center gap-1">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              Featured
            </div>
            <% } %>

            <!-- Share Button -->
            <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent('I will attend ' + event.title + ' @ ' + event.dates) %>"
               target="_blank"
               class="absolute top-3 right-3 p-2 bg-card/95 backdrop-blur-sm rounded-full shadow-sm opacity-0 group-hover:opacity-100 transition-all duration-200 hover:bg-primary hover:text-primary-foreground text-foreground"
               onclick="event.stopPropagation()">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
              </svg>
            </a>
          </div>

          <!-- Content -->
          <div class="p-4">
            <h3 class="font-semibold text-lg text-foreground mb-2 line-clamp-1 group-hover:text-primary transition-colors">
              <%= event.title %>
            </h3>
            
            <div class="flex items-center gap-1.5 text-muted-foreground text-sm mb-4">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="line-clamp-1"><%= event.location %></span>
            </div>

            <div class="flex items-center justify-between">
              <a href="/events/<%= event.id %>"
                 class="inline-flex items-center justify-center h-9 px-3 text-sm font-medium border border-border rounded-md bg-background hover:bg-primary hover:text-primary-foreground hover:border-primary transition-all">
                View
              </a>
              
              <span class="text-sm font-medium text-foreground">
                <%= event.price == 0 ? 'Free' : '$' + event.price %>
              </span>
            </div>

            <% if (typeof role !== 'undefined' && role === 'admin') { %>
            <div class="mt-3 pt-3 border-t border-border flex items-center gap-4 text-sm">
              <a href="/admin/events/<%= event.id %>/edit" class="text-primary hover:underline font-medium">
                Edit
              </a>
              <form method="POST" action="/admin/events/<%= event.id %>/delete" 
                    onsubmit="return confirm('Delete this event?')" class="inline">
                <button type="submit" class="text-destructive hover:underline font-medium">
                  Delete
                </button>
              </form>
            </div>
            <% } %>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Sidebar: Today's Highlight -->
    <aside class="w-full lg:w-80 flex-shrink-0">
      <div class="lg:sticky lg:top-24">
        <div class="bg-card rounded-lg p-5 shadow-card">
          <div class="flex items-center gap-2 mb-4 pb-3 border-b border-border">
            <svg class="w-5 h-5 text-highlight" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z"/>
            </svg>
            <h2 class="font-semibold text-lg text-foreground">Today's Highlight</h2>
          </div>

          <div class="space-y-1">
            <% if (typeof featured === 'undefined' || featured.length === 0) { %>
              <p class="text-sm text-muted-foreground text-center py-4">
                No featured events today
              </p>
            <% } else { %>
              <% featured.forEach(event => { %>
                <a href="/events/<%= event.id %>" 
                   class="group flex gap-3 p-3 rounded-lg transition-all duration-200 hover:bg-accent">
                  <!-- Thumbnail -->
                  <div class="w-14 h-14 rounded-md overflow-hidden flex-shrink-0">
                    <img src="<%= event.image_url || '/placeholder.svg' %>" alt="<%= event.title %>"
                         class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110">
                  </div>

                  <!-- Content -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                      <h4 class="font-medium text-sm text-foreground line-clamp-1 group-hover:text-primary transition-colors">
                        <%= event.title %>
                      </h4>
                    </div>
                    <p class="text-xs text-muted-foreground flex items-center gap-1 mb-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      <%= event.dates %> @ <%= event.time || '19:30' %>
                    </p>
                    <div class="flex items-center gap-1 text-xs text-muted-foreground">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                      <span class="line-clamp-1"><%= event.location ? event.location.split(',')[0] : 'TBD' %></span>
                    </div>
                  </div>
                </a>
              <% }) %>
            <% } %>
          </div>
        </div>
      </div>
    </aside>
  </div>
</main>

<!-- Floating Add Button (Admin Only) -->
<% if (typeof role !== 'undefined' && role === 'admin') { %>
<a href="/admin/events/new"
   class="fixed bottom-6 right-6 w-14 h-14 bg-primary text-primary-foreground rounded-full shadow-elevated flex items-center justify-center transition-all duration-200 hover:scale-110 hover:shadow-xl z-50"
   aria-label="Add new event">
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
  </svg>
</a>
<% } %>

</body>
</html>
