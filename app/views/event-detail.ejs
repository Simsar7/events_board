<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= event.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="min-h-screen bg-gray-50">
  <header class="bg-white border-b border-gray-200 sticky top-0 z-40">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
      <a href="/" class="font-semibold text-xl text-gray-900">Events</a>
      <a href="/login" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Admin Login</a>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 py-8">
    <a href="/" class="inline-flex items-center gap-2 text-gray-500 hover:text-gray-900 transition-colors mb-6">
      â† Back to Events
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="order-2 lg:order-1">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2"><%= event.title %></h1>
        <p class="flex items-center gap-2 text-gray-500 mb-6">ğŸ“ <%= event.location %></p>
        <p class="text-gray-700 leading-relaxed mb-8"><%= event.description %></p>

        <div class="bg-white rounded-lg overflow-hidden shadow-md mb-8">
          <table class="w-full">
            <thead>
              <tr class="bg-gray-100">
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-900">ğŸ“… Date</th>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-900">ğŸ• Time</th>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-900">ğŸ’µ Price</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% event.dates.split(',').forEach(date => { %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-4 py-3 text-sm text-gray-900"><%= date.trim() %></td>
                <td class="px-4 py-3 text-sm text-gray-900"><%= event.time || '19:30' %></td>
                <td class="px-4 py-3 text-sm font-medium text-gray-900"><%= event.price == 0 ? 'Free' : '$' + event.price %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <a href="https://twitter.com/intent/tweet?text=I will attend <%= encodeURIComponent(event.title) %> @ <%= encodeURIComponent(event.dates) %>"
          target="_blank"
          class="inline-flex items-center gap-2 px-4 py-2 bg-blue-400 hover:bg-blue-500 text-white font-medium rounded-lg transition-all hover:scale-105">
          ğŸ¦ Tweet this event
        </a>
      </div>

      <div class="order-1 lg:order-2">
        <div class="lg:sticky lg:top-24">
          <div class="rounded-lg overflow-hidden shadow-lg">
            <img src="<%= event.image_url || '/placeholder.svg' %>" alt="<%= event.title %>" class="w-full aspect-video object-cover">
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
