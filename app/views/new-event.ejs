<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof event !== 'undefined' && event ? "Edit Event" : "Create Event" %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'sans-serif'] },
          colors: {
            background: 'hsl(0, 0%, 99%)',
            foreground: 'hsl(220, 20%, 10%)',
            card: 'hsl(0, 0%, 100%)',
            'card-foreground': 'hsl(220, 20%, 10%)',
            primary: { DEFAULT: 'hsl(217, 91%, 50%)', foreground: 'hsl(0, 0%, 100%)' },
            secondary: { DEFAULT: 'hsl(220, 14%, 96%)', foreground: 'hsl(220, 20%, 20%)' },
            muted: { DEFAULT: 'hsl(220, 14%, 96%)', foreground: 'hsl(220, 10%, 45%)' },
            accent: { DEFAULT: 'hsl(217, 91%, 95%)', foreground: 'hsl(217, 91%, 40%)' },
            destructive: { DEFAULT: 'hsl(0, 84%, 60%)', foreground: 'hsl(0, 0%, 100%)' },
            border: 'hsl(220, 13%, 91%)',
            input: 'hsl(220, 13%, 91%)',
            ring: 'hsl(217, 91%, 50%)',
            highlight: { DEFAULT: 'hsl(45, 93%, 58%)', foreground: 'hsl(45, 93%, 20%)' },
          },
          borderRadius: { lg: '0.75rem' },
          boxShadow: {
            'card': '0 4px 6px -1px hsl(220 20% 10% / 0.08), 0 2px 4px -2px hsl(220 20% 10% / 0.05)',
            'elevated': '0 20px 25px -5px hsl(220 20% 10% / 0.1), 0 8px 10px -6px hsl(220 20% 10% / 0.05)',
          }
        }
      }
    }
  </script>
  <style>
    * { font-family: 'Inter', sans-serif; }
    .animate-fade-in { animation: fadeIn 0.3s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
  </style>
</head>
<body class="min-h-screen bg-background">

<!-- Header -->
<header class="sticky top-0 z-40 w-full border-b border-border bg-card/80 backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex h-16 items-center justify-between">
    <a href="/" class="flex items-center gap-2 group">
      <div class="w-9 h-9 bg-primary rounded-lg flex items-center justify-center transition-transform group-hover:scale-105">
        <svg class="w-5 h-5 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
      <span class="font-semibold text-xl text-foreground">Events</span>
    </a>

    <nav class="flex items-center gap-4 text-sm">
      <a href="/" class="text-muted-foreground hover:text-foreground transition-colors">Home</a>
      <a href="/admin/events" class="text-muted-foreground hover:text-foreground transition-colors">Manage Events</a>
      <% if (typeof user !== 'undefined' && user) { %>
        <span class="text-muted-foreground">Hi, <%= user.username || user.email %></span>
        <a href="/logout" class="text-destructive hover:text-destructive/80 transition-colors">Logout</a>
      <% } %>
    </nav>
  </div>
</header>

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Button -->
  <a href="/admin/events" class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors mb-6 group">
    <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    <span>Back to Events</span>
  </a>

  <h1 class="text-3xl font-bold text-foreground mb-8 animate-fade-in">
    <%= typeof event !== 'undefined' && event ? "Edit Event" : "Create New Event" %>
  </h1>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Form -->
    <div>
      <form method="POST"
            action="<%= typeof event !== 'undefined' && event ? '/admin/events/' + event.id : '/admin/events' %>"
            id="event-form"
            class="bg-card rounded-lg p-6 shadow-card border border-border space-y-6 animate-fade-in">

        <!-- Title -->
        <div class="space-y-2">
          <label for="title" class="block text-sm font-medium text-foreground">
            Title <span class="text-destructive">*</span>
          </label>
          <input 
            type="text"
            id="title"
            name="title" 
            required
            value="<%= typeof event !== 'undefined' && event && event.title ? event.title : '' %>"
            placeholder="Event Title"
            oninput="updatePreview()"
            class="w-full h-11 px-4 border border-input rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:border-primary transition-all"
          >
        </div>

        <!-- Description -->
        <div class="space-y-2">
          <label for="description" class="block text-sm font-medium text-foreground">Description</label>
          <textarea 
            id="description"
            name="description" 
            rows="4"
            placeholder="Describe your event..."
            oninput="updatePreview()"
            class="w-full px-4 py-3 border border-input rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:border-primary transition-all resize-none"><%= typeof event !== 'undefined' && event && event.description ? event.description : '' %></textarea>
        </div>

        <!-- Dates -->
        <div class="space-y-2">
          <label for="datePicker" class="block text-sm font-medium text-foreground">
            Date(s) <span class="text-destructive">*</span>
          </label>
          <input 
            type="text"
            id="datePicker"
            name="dates" 
            required
            value="<%= typeof event !== 'undefined' && event && event.dates ? event.dates : '' %>"
            placeholder="Click to select date(s)"
            oninput="updatePreview()"
            class="w-full h-11 px-4 border border-input rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:border-primary transition-all cursor-pointer"
          >
          <p class="text-xs text-muted-foreground">ðŸ’¡ Click to select a single date or drag to select a range</p>
        </div>

        <!-- Location -->
        <div class="space-y-2">
          <label for="location" class="block text-sm font-medium text-foreground">Location</label>
          <input 
            type="text"
            id="location"
            name="location"
            value="<%= typeof event !== 'undefined' && event && event.location ? event.location : '' %>"
            placeholder="Event Location"
            oninput="updatePreview()"
            class="w-full h-11 px-4 border border-input rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:border-primary transition-all"
          >
        </div>

        <!-- Image URL -->
        <div class="space-y-2">
          <label for="image_url" class="block text-sm font-medium text-foreground">Image URL</label>
          <input 
            type="url"
            id="image_url"
            name="image_url"
            value="<%= typeof event !== 'undefined' && event && event.image_url ? event.image_url : '' %>"
            placeholder="https://example.com/image.jpg"
            oninput="updatePreview()"
            class="w-full h-11 px-4 border border-input rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:border-primary transition-all"
          >
          <p class="text-xs text-muted-foreground">Optional: Add a banner image for your event</p>
        </div>

        <!-- Featured -->
        <div class="flex items-start gap-3">
          <input 
            type="checkbox" 
            id="featured"
            name="featured" 
            value="true"
            onchange="updatePreview()"
            <%= typeof event !== 'undefined' && event && event.featured ? "checked" : "" %> 
            class="w-5 h-5 mt-0.5 rounded border-input text-primary focus:ring-ring"
          >
          <div>
            <label for="featured" class="font-medium text-foreground cursor-pointer">Featured Event</label>
            <p class="text-sm text-muted-foreground">Display this event prominently on the homepage</p>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex gap-3 pt-6 border-t border-border">
          <button 
            type="submit"
            class="inline-flex items-center justify-center gap-2 h-11 px-6 bg-primary hover:bg-primary/90 text-primary-foreground font-medium rounded-lg transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <%= typeof event !== 'undefined' && event ? "Update Event" : "Create Event" %>
          </button>
          <a 
            href="/admin/events"
            class="inline-flex items-center justify-center h-11 px-6 bg-secondary hover:bg-secondary/80 text-secondary-foreground font-medium rounded-lg transition-colors"
          >
            Cancel
          </a>
        </div>
      </form>
    </div>

    <!-- Live Preview -->
    <div class="lg:sticky lg:top-24 self-start">
      <h2 class="text-lg font-semibold text-foreground mb-4">Live Preview</h2>
      <div id="preview-card" class="bg-card rounded-lg overflow-hidden shadow-card border border-border animate-fade-in">
        <!-- Image -->
        <div class="relative aspect-[4/3] overflow-hidden bg-muted">
          <img 
            id="preview-image"
            src="<%= typeof event !== 'undefined' && event && event.image_url ? event.image_url : 'https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=600&h=400&fit=crop' %>" 
            alt="Event preview"
            class="w-full h-full object-cover"
            onerror="this.src='https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=600&h=400&fit=crop'"
          >
          
          <!-- Date Badge -->
          <div class="absolute top-3 left-3 bg-card/95 backdrop-blur-sm px-3 py-1.5 rounded-md shadow-sm">
            <div class="flex items-center gap-1.5 text-sm font-medium text-foreground">
              <svg class="w-3.5 h-3.5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span id="preview-date">Select date</span>
            </div>
          </div>

          <!-- Featured Badge -->
          <div id="preview-featured" class="absolute top-3 right-3 bg-highlight text-highlight-foreground text-xs font-semibold px-2.5 py-1 rounded-full hidden items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            Featured
          </div>
        </div>

        <!-- Content -->
        <div class="p-4">
          <h3 id="preview-title" class="font-semibold text-lg text-foreground mb-2">Event Title</h3>
          
          <div class="flex items-center gap-1.5 text-muted-foreground text-sm mb-4">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span id="preview-location">Event location</span>
          </div>

          <p id="preview-description" class="text-sm text-muted-foreground line-clamp-2 mb-4">
            Event description will appear here...
          </p>

          <div class="flex items-center justify-between">
            <span class="inline-flex items-center justify-center h-9 px-3 text-sm font-medium border border-border rounded-md bg-background">
              View
            </span>
            <span class="text-sm font-medium text-foreground">Free</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<!-- Flatpickr JS -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
  // Initialize date picker
  flatpickr("#datePicker", {
    mode: "range",
    dateFormat: "Y-m-d",
    altInput: true,
    altFormat: "F j, Y",
    allowInput: true,
    minDate: "today",
    onChange: function() {
      updatePreview();
    }
  });

  // Update live preview
  function updatePreview() {
    const title = document.getElementById('title').value || 'Event Title';
    const description = document.getElementById('description').value || 'Event description will appear here...';
    const location = document.getElementById('location').value || 'Event location';
    const dates = document.getElementById('datePicker').value || 'Select date';
    const imageUrl = document.getElementById('image_url').value;
    const featured = document.getElementById('featured').checked;

    document.getElementById('preview-title').textContent = title;
    document.getElementById('preview-description').textContent = description;
    document.getElementById('preview-location').textContent = location;
    document.getElementById('preview-date').textContent = dates + ' @ 19:30';
    
    if (imageUrl) {
      document.getElementById('preview-image').src = imageUrl;
    }

    const featuredBadge = document.getElementById('preview-featured');
    if (featured) {
      featuredBadge.classList.remove('hidden');
      featuredBadge.classList.add('flex');
    } else {
      featuredBadge.classList.add('hidden');
      featuredBadge.classList.remove('flex');
    }
  }

  // Initialize preview on page load
  updatePreview();
</script>

</body>
</html>
